<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>dditServlet</display-name>
  <!-- web.xml : 웹 어플리케이션을 위한 설정 정보를 담고 있는 파일 -->
  <!-- web.xml을 변경하고 난 뒤 웹 컨테이너(tomcat)가
  	     웹 어플리케이션을 (자동으로) 다시 시작해야만 설정이 반영  -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <context-param>
  	<description>로깅 여부</description>
  	<param-name>logEnabled</param-name>
  	<param-value>true</param-value>
  </context-param>
  
  <context-param>
  	<description>디버깅 레벨</description>
  	<param-name>debugLevel</param-name>
  	<param-value>5</param-value>
  </context-param>
  
  <!-- 페이지 없는 오류 처리 -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/error404.jsp</location>
  </error-page>
  <!-- 소스 오류 처리 -->
  <error-page>
  	<error-code>500</error-code>
  	<location>/error/error500.jsp</location>
  </error-page>
  
  <!-- exception 타입별로 에러 페이지 지정 -->
  <error-page>
  	<exception-type>java.lang.NullPointerException</exception-type>
  	<location>/error/errorNullPointer.jsp</location>
  </error-page>
  
  <!-- session 유효시간 설정(분 단위) ex) 50분으로 설정.-->
  <session-config>
  	<session-timeout>50</session-timeout>
  </session-config>
  
  <!-- 웹 어플리케이션 시작 시(톰캣 기동) JDBC드라이버를 로딩하므로 
  	개별 JSP는 JDBC드라이버를 로딩하지 않아도 됨 -->
  <servlet>
  	<servlet-name>oracleDriverLoader</servlet-name>
  	<servlet-class>jdbc.OracleDriverLoader</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <!-- 웹 어플리케이션이 시작될때 (tomcat 기동/재기동) DBCPInit 서블릿 클래스가 자동으로 시작되고
  init() 메서드가 호출됨 -->
  <servlet>
  	<servlet-name>DBCPInit</servlet-name>
  	<servlet-class>jdbc.DBCPInit</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <!-- 서블릿으로 사용할 클래스를 등록 -->
  <servlet>
  	<servlet-name>now</servlet-name>
  	<servlet-class>chapter17.NowServlet</servlet-class>
  </servlet>
  <!-- 서블릿과 URL 간의 매핑
  NowServlet를 /now 경로에 매핑 -->
  <servlet-mapping>
  	<servlet-name>now</servlet-name>
  	<url-pattern>/now</url-pattern>
  </servlet-mapping>
  <!-- 서블릿을 최초 요청 시 서블릿 객체를 생성, 그 이후부터는 앞서 생성한 서블릿 객체를 그대로 사용 -->
  
</web-app>

